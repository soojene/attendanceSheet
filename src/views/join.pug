            .publicPage-head
                .spaceForLayout
                    a.goback(href="/") 
                        i.fas.fa-chevron-left
                h1 🌳 🌳 🌳
                .spaceForLayout      
            
            .loginJoinErrorBox     
                if(ErrorMessage)
                    h4=ErrorMessage
            
            .joinFormBox
                form(action=routes.join, method="POST") 
                    //- input(type="text" name="name" placeholder="nickname" required)
